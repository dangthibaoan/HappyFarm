<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="120dp" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="120dp" />

    <ImageView
        android:id="@+id/imgSP"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:contentDescription=""
        app:layout_constraintEnd_toEndOf="@id/guideline0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:srcCompat="@drawable/icon_shop" />

    <TextView
        android:id="@+id/txtTensp"
        android:text="Tên sản phẩm"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txtMota"
        app:layout_constraintStart_toStartOf="@id/guideline0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtMota"
        android:text="Mô tả"
        app:layout_constraintTop_toBottomOf="@id/txtTensp"
        app:layout_constraintBottom_toTopOf="@id/imgCoin"
        app:layout_constraintStart_toStartOf="@id/guideline0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imgCoin"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:contentDescription=""
        app:layout_constraintTop_toBottomOf="@id/txtMota"
        app:layout_constraintStart_toStartOf="@id/guideline0"
        app:layout_constraintBottom_toTopOf="@id/txt01"
        tools:srcCompat="@drawable/farmcoin" />
    <TextView
        android:id="@+id/txtDongia"
        android:text="0000"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/txtMota"
        app:layout_constraintBottom_toTopOf="@id/txt01"
        app:layout_constraintStart_toEndOf="@id/imgCoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt01"
        android:text="Đang có:"
        app:layout_constraintTop_toBottomOf="@id/imgCoin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txtSoluong"
        android:text="0000"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/imgCoin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/txt01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnPay"
        android:text="mua"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>